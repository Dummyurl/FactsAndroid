<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimaryDark"
            android:rotation="270"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />
    </RelativeLayout>


    <android.support.design.chip.ChipGroup
        android:id="@+id/cg_dialog_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="All" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Politics" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economics" />


        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 1" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 2" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 3" />


        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip.Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 4" />

        <android.support.design.chip.Chip
            style="@style/Feed.Widget.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 5" />

    </android.support.design.chip.ChipGroup>

</LinearLayout>